{
  "uid": "rate-limiter-simple",
  "title": "Rate Limiter - Simple",
  "schemaVersion": 30,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Total Request Rate",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "targets": [
        {
          "expr": "sum(rate(ratelimiter_requests_total[1m]))",
          "legendFormat": "Total RPS",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Allowed / Blocked",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "targets": [
        {
          "expr": "sum(rate(ratelimiter_requests_total{result=\"allowed\"}[1m]))",
          "legendFormat": "Allowed",
          "refId": "A"
        },
        {
          "expr": "sum(rate(ratelimiter_requests_total{result=\"blocked\"}[1m]))",
          "legendFormat": "Blocked",
          "refId": "B"
        }
      ]
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] }
}
