# Server
PORT=8082

# Cloud SQL (MySQL/Postgres URL should include SSL options required by your provider)
DB_DRIVER=com.mysql.cj.jdbc.Driver
DB_URL=jdbc:mysql://YOUR_DB_HOST:3306/ratelimiter_db?useSSL=true&requireSSL=true&serverTimezone=UTC
DB_USERNAME=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD

# Cloud Redis
REDIS_HOST=YOUR_REDIS_HOST
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_SSL_ENABLED=true

# App integration
RATELIMITER_BASE_URL=https://YOUR_DISTRIBUTED_RATELIMITER_BACKEND

# Session cookie (set secure=true and a real domain in production)
SESSION_COOKIE_SAMESITE=None
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_DOMAIN=YOUR_DOMAIN
